<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          prefWidth="700"
          prefHeight="500" alignment="CENTER">
    <stylesheets>
        <URL value="@../css/LoginStyle.css"/>
    </stylesheets>
    <HBox alignment="CENTER">
        <Label text="Fishpond" styleClass="title"/>
    </HBox>
    <TextField promptText="请输入用户名" GridPane.rowIndex="2" fx:id="username"/>
    <PasswordField promptText="请输入密码" GridPane.rowIndex="3" fx:id="password"/>
    <Button GridPane.rowIndex="4" text="登录" onAction="#login"/>
</GridPane>
